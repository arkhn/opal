<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <g:FlowPanel>

    <b:Heading size="4" addStyleNames="xxlarge-top-margin">
      <ui:msg description="Statistics label">Statistics</ui:msg>
    </b:Heading>

    <b:FluidRow>
      <b:Column size="5">
        <o:DefaultFlexTable ui:field="stats"/>
      </b:Column>
      <b:Column size="5" offset="2">
        <o:DefaultFlexTable ui:field="frequencies"/>
      </b:Column>
    </b:FluidRow>

  </g:FlowPanel>

</ui:UiBinder>